<!-- Customers Management -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Customer Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Import</button>
        </div>
        <button type="button" class="btn btn-sm btn-primary">
            <i class="fas fa-plus me-1"></i>
            Add Customer
        </button>
    </div>
</div>

<!-- Search and Filters -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search customers...">
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <select class="form-select">
                    <option>All Plans</option>
                    <option>Basic</option>
                    <option>Standard</option>
                    <option>Premium</option>
                </select>
            </div>
            <div class="col-md-6">
                <select class="form-select">
                    <option>All Status</option>
                    <option>Active</option>
                    <option>Trial</option>
                    <option>Expired</option>
                    <option>Cancelled</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Customers Table -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Store Name</th>
                <th>Owner</th>
                <th>Plan</th>
                <th>Status</th>
                <th>Revenue</th>
                <th>Invoices</th>
                <th>Last Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% customers.forEach(customer => { %>
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="avatar-sm me-2">
                            <div class="avatar-title bg-primary rounded-circle">
                                <%= customer.storeName.charAt(0).toUpperCase() %>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0"><%= customer.storeName %></h6>
                            <small class="text-muted"><%= customer.domain %></small>
                        </div>
                    </div>
                </td>
                <td>
                    <div>
                        <div><%= customer.ownerName %></div>
                        <small class="text-muted"><%= customer.email %></small>
                    </div>
                </td>
                <td>
                    <span class="badge bg-<%= customer.plan === 'Premium' ? 'success' : customer.plan === 'Standard' ? 'warning' : 'secondary' %>">
                        <%= customer.plan %>
                    </span>
                </td>
                <td>
                    <span class="badge bg-<%= customer.status === 'active' ? 'success' : customer.status === 'trial' ? 'info' : customer.status === 'expired' ? 'warning' : 'danger' %>">
                        <%= customer.status.charAt(0).toUpperCase() + customer.status.slice(1) %>
                    </span>
                </td>
                <td>â‚¹<%= customer.totalRevenue.toLocaleString() %></td>
                <td><%= customer.totalInvoices %></td>
                <td><%= new Date(customer.lastActive).toLocaleDateString() %></td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-primary" title="View Details">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-outline-secondary" title="Edit">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-outline-danger" title="Suspend">
                            <i class="fas fa-ban"></i>
                        </button>
                    </div>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<!-- Pagination -->
<nav aria-label="Customers pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>